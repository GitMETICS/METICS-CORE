@using webMetics.Controllers
@{
    ViewBag.Title = "Categorías";
}
<!DOCTYPE html>
<html>
<body>
    @if (ViewBag.Id != "" && ViewBag.Role == 1)
    {


        <div class="contenedor-tipos-actividades container-fluid">
            @if (/*Request.UrlReferrer != null*/true)
            {
                <a class="bottomNav bi bi-arrow-left" style="color: #5a5a5a; text-decoration: none; " onclick="history.go(-1); return false;" href="#"></a><br />
            }

            <h1>Categorías</h1>
            <hr />

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-dark alert-dismissible fade show" role="alert">
                    <strong> @TempData["Message"] </strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong> @TempData["Success"] </strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (ViewBag.Categorias != null)
            {
                <a href="/Categoria/CrearCategoria" class="btn btn-primary" style="float: right; ">Crear categoría</a>
            }

            <div class="table-responsive">
                @if (ViewBag.Categorias == null)
                {
                    <h5 class="text-center">No hay categorías creadas</h5>
                    <div class="d-flex justify-content-center">
                        <a href="/Categoria/CrearCategoria" class="btn btn-primary" role="button" style="float: right;width:20%;height:105%">Crear categoría</a>
                    </div>
                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripción</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var categoria in ViewBag.Categorias)
                            {
                                <tr data-toggle="collapse" data-target="#demo1" class="accordion-toggle">
                                    <td>@categoria.nombre</td>
                                    <td>@categoria.descripcion</td>
                                    <td>
                                        @Html.ActionLink("Temas", "MostrarTemas", "Tema",
          new { nombre = categoria.nombre },
          new { @class = "btn btn-primary", @onclick = "" })
                                    </td>
                                    <td class=" ">
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalEditar" onclick="actualizarModal('@categoria.nombre')">
                                            Editar
                                        </button>
                                    </td>
                                    <td class=" ">
                                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#modalEliminar" onclick="actualizarModal('@categoria.nombre')">
                                            Eliminar
                                        </button>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
        <div class="modal fade" id="modalEliminar" tabindex="-1" aria-labelledby="modalEliminarLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Eliminar categoría</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ¿Estás seguro que deseas eliminar esta categoría?

                        @using (Html.BeginForm("EliminarCategoria", "Categoria"))
                        {
                            @Html.AntiForgeryToken()

                            <div class="modal-footer">
                                <input type="hidden" id="nombreCategoria" name="nombreCategoria">
                                <input type="submit" class="btn btn-primary" value="Aceptar" onclick="" />
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalEditar" tabindex="-1" aria-labelledby="modalEditarLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editarModalLabel">Editar categoría</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h8 style="padding-bottom:5px">
                            ¿Estás seguro que deseas editar esta categoría?
                        </h8>
                        <br />
                        @using (Html.BeginForm("EditarCategoria", "Categoria", FormMethod.Get, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="modal-footer">
                                <input type="hidden" id="idGeneradoEditar" name="nombre">
                                <input type="submit" class="btn btn-primary" value="Aceptar" />
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    }
    else
    {
        await Html.RenderPartialAsync("~/Views/Usuario/IniciarSesion.cshtml");
    }
    </body>
</html>
<script type="text/javascript">
    function actualizarModal(categoria) {
        document.getElementById("nombreCategoria").value = categoria;
        document.getElementById("idGeneradoEditar").value = categoria;
    }
</script>