@model webMetics.Models.TipoActividadModel
@using webMetics.Controllers
@{
    ViewBag.Title = "Agregar tipo de actividad";
}
<!DOCTYPE html>

<html>
<head>
</head>
<body>
    @if (ViewBag.Id != "" && ViewBag.Role == 1)
    {
        if (ViewBag.Message != null)
        {
            if (ViewBag.ExitoAlCrear != null)
            {
                <div class="alert-success">
                    <h3> @ViewBag.Message </h3>
                </div>
            }
            else
            {
                <div class="alert-danger">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>@ViewBag.Message</strong>
                        <span type="button" class="close" data-bs-dismiss="alert" aria-label="Close" style="float:right"><span aria-hidden="true">&times;</span></span>
                    </div>
                </div>
            }
        }
        using (Html.BeginForm("CrearTipoActividad", "TipoActividad", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h1>Creación de tipo de actividad</h1>
                <h5>Inserte los siguientes datos</h5>
                <h6 style="color:red"> * Son campos obligatorios</h6>
                <hr />
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            @Html.LabelFor(tipoActividadModel => tipoActividadModel.nombre, new { Style = "font-size:22px" }) <a style="color:red;font-size:22px">*</a>
                            @Html.TextBoxFor(tipoActividadModel => tipoActividadModel.nombre, new { @class = "form-control", @maxlength = "80" })
                            @Html.ValidationMessageFor(tipoActividadModel => tipoActividadModel.nombre, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(tipoActividadModel => tipoActividadModel.descripcion, new { Style = "font-size:22px" })  <a style="color:red;font-size:22px">*</a>
                            @Html.TextAreaFor(tipoActividadModel => tipoActividadModel.descripcion, new { @class = "form-control", @rows = "3", @maxlength = "300" })
                            @Html.ValidationMessageFor(tipoActividadModel => tipoActividadModel.descripcion, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="row justify-content-center m-4">
                        <div class="col-auto">
                            @Html.ActionLink("Cancelar", "ListaTiposActividad", "TipoActividad", new { }, new { @class = "btn btn-secondary btn-block" })
                        </div>
                        <div class="col-auto">
                            <input type="submit" class="btn btn-primary btn-block" value="Guardar" />
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        await Html.RenderPartialAsync("~/Views/Usuario/IniciarSesion.cshtml");
    }

</body>
</html>