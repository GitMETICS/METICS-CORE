@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.nombre" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.nombre" class="form-label"></label>
                <span asp-validation-for="Input.nombre" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.apellido_1" class="form-control" />
                <label asp-for="Input.apellido_1" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.apellido_2" class="form-control" />
                <label asp-for="Input.apellido_2" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.correo" class="form-control" />
                <label asp-for="Input.correo" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.tipoIdentificacion" class="form-control" />
                <label asp-for="Input.tipoIdentificacion" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.idParticipante" class="form-control" />
                <label asp-for="Input.idParticipante" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.unidadAcademica" class="form-control" />
                <label asp-for="Input.unidadAcademica" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.telefonos" class="form-control" />
                <label asp-for="Input.telefonos" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.area" class="form-control" />
                <label asp-for="Input.area" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.departamento" class="form-control" />
                <label asp-for="Input.departamento" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.seccion" class="form-control" />
                <label asp-for="Input.seccion" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input asp-for="Input.condicion" class="form-control" />
                <label asp-for="Input.condicion" class="form-label"></label>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
