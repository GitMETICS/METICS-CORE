@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>

<html id="html-login">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body id="body-login" style=" background-image: url('../../Imagenes/fondo_login.jpg')">
    <div class="container justify-content-center" style="width:60%; margin-top:5%">
        <div class="container justify-content-center">
            <div class="text-center">
                <div class="card bg-white" style="background-color:gray">
                    <div class="container-fluid justify-content-center formulario-login">
                        <div class="card-body">
                            <section>
                                <form id="account" method="post">
                                    <h1>Inicio de sesión</h1>
                                    <hr />
                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                        <label asp-for="Input.Email" class="form-label">Correo</label>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="checkbox mb-3">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            Recordar mis datos
                                        </label>
                                    </div>
                                    <div>
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Ingresar</button>
                                    </div>
                                    <div>
                                        <p>
                                            <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidó la contraseña?</a>
                                        </p>
                                        <p>
                                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
                                        </p>
                                        <p>
                                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a>
                                        </p>
                                    </div>
                                </form>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
